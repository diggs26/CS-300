// define a structure for course info
class Course
{
    string course;
    string courseNumber;
    string courseTitle;
    vector<string> prerequisites;

    Course() = default;

    struct CreateCourseObject(courseNumber, courseTitle, prerequisites)
    {
        // create new course object
        newCourse = new courseObject;

        // set instance variables with provided data
        newCourse.courseNumber = courseNumber;
        newCourse.courseTitle = courseTitle;
        newCourse.prerequisites = prerequisites;

        return newCourse;
    }
}

